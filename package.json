{
  "name": "rxjs-chat-app",
  "version": "1.0.0",
  "description": "Chat app built with RxJS and Socket.IO",
  "author": "Steve Holgado",
  "main": "server.js",
  "scripts": {
    "server": "NODE_ENV=production node server.js",
    "build": "NODE_ENV=production webpack -p",
    "dev": "NODE_ENV=development concurrently \"webpack --watch\" \"nodemon server.js\"",
    "start": "npm run dev"
  },
  "dependencies": {
