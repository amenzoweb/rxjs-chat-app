    "rxjs": "^6.3.3",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1"
  }
}
